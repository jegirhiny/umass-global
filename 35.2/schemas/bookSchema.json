{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "default": {},
  "title": "Root Schema",
  "required": ["book"],
  "properties": {
    "book": {
      "type": "object",
      "default": {},
      "title": "The book Schema",
      "required": [
        "isbn",
        "amazon_url",
        "author",
        "language",
        "pages",
        "publisher",
        "title",
        "year"
      ],
      "properties": {
        "isbn": {
          "type": "string",
          "default": "",
          "title": "The isbn Schema",
          "examples": ["978-3-16-148410-0"]
        },
        "amazon_url": {
          "type": "string",
          "default": "",
          "title": "The amazon_url Schema",
          "examples": ["http://amazon.com/some-book"]
        },
        "author": {
          "type": "string",
          "default": "",
          "title": "The author Schema",
          "examples": ["John Doe"]
        },
        "language": {
          "type": "string",
          "default": "",
          "title": "The language Schema",
          "examples": ["English"]
        },
        "pages": {
          "type": "integer",
          "default": 0,
          "title": "The pages Schema",
          "examples": [350]
        },
        "publisher": {
          "type": "string",
          "default": "",
          "title": "The publisher Schema",
          "examples": ["Penguin Random House"]
        },
        "title": {
          "type": "string",
          "default": "",
          "title": "The title Schema",
          "examples": ["The Great Adventure"]
        },
        "year": {
          "type": "integer",
          "default": 0,
          "title": "The year Schema",
          "examples": [2022]
        }
      },
      "examples": [
        {
          "isbn": "978-3-16-148410-0",
          "amazon_url": "http://amazon.com/some-book",
          "author": "John Doe",
          "language": "English",
          "pages": 350,
          "publisher": "Penguin Random House",
          "title": "The Great Adventure",
          "year": 2022
        }
      ]
    }
  },
  "examples": [
    {
      "book": {
        "isbn": "978-3-16-148410-0",
        "amazon_url": "http://amazon.com/some-book",
        "author": "John Doe",
        "language": "English",
        "pages": 350,
        "publisher": "Penguin Random House",
        "title": "The Great Adventure",
        "year": 2022
      }
    }
  ]
}
